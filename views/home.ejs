<%- include ('partials/header') -%>

<div class="ui main text huge header container">
    <div class="ui header huge">RESTful Blog App</div>
</div>
<% if(success && success.length > 0){  %> 
    <div class="alert alert-success" role="alert">
        <%= success %> 
    </div>
<% } %>
<div class="ui main text attached container segment">
    <div class="ui divided items">
         <% data.forEach(function(blog){ %>
          <div class="item">
            <div class="image">
                <img src="<%= blog.image %> " alt="<% blog.title %> ">
            </div>
            <div class="content">
                <a class="header" href="/blogs/<%= blog._id %>"><%= blog.title %></a>
                <div class="meta">
                    <span><%= blog.created.toDateString()%></span>
                </div>
                <div class="description">
                    <p><%- blog.body.substring(0, 100) %>...</p>
                </div>
                <div class="extra">
                    <a class="ui floated basic violet button" href="/blogs/<%= blog._id %>">Read
                        more<i class="icon chevron right"></i></a>
                </div>
            </div>
        </div>

        <% }); %>
    </div>
</div>

<%- include('partials/footer') -%>
